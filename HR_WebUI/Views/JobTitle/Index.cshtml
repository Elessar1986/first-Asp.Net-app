@model IEnumerable<HR_DAL.DbLayer.JobTitle>

@{
    ViewBag.Title = "Title Job";
}



<p>
    @Html.ActionLink("New Job Title", "Edit", null, new { @class = "btn-warning btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.NameJobTitle)*@
            New Job Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameJobTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.JobTitleId }, new { @class = "btn btn-primary btn-sm" }) 

            @Html.ActionLink("Delete", "Delete", new { id=item.JobTitleId }, new { @class = "btn btn-danger btn-sm deleteJob" })
        </td>
    </tr>
}

</table>

@section myscript{
    <script type="text/javascript">
        $(function () {

            $(".deleteJob").click(function (e) {
                if (confirm("You are sure?")) {
                    return true;
                }
                else {
                    e.preventDefault();
                }
            })

        });


    </script>
    
    }